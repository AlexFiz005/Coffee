﻿@{
    ViewData["Title"] = "News";
}

<div>
    <h1 class="display-4">News</h1>

    <a href="/admin/news/createNews" role="button" class="btn btn-primary">Create news</a>

    <br />
    <hr />
    <br />

    <table>
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Publication date</th>
            <th>AuthorId</th>
            <th>CreateDate</th>
            <th>IsActive</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <th>@item.Text</th>
                <th>@item.Date.ToString("yyyy.MM.dd HH:mm")</th>
                <th>@item.AuthorId</th>
                <th>@item.CreateDate.ToString("yyyy.MM.dd HH:mm")</th>
                <th>@item.IsActive</th>
                <th><a href="">edit</a></th>
                <th><a href="">delete</a></th>
            </tr>        
        }
    </table>
</div> 